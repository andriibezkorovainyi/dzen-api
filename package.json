{
  "name": "dzen-api",
  "version": "1.0.0",
  "description": "API for the comments app, using TypeScript, Express, PostgreSQL, Prisma ORM and more...",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "start": "prisma generate && npm run build && node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "container": "npm run build && docker build -t dzen-api . && docker run -d --rm -p 5000:5000 dzen-api",
    "format": "prettier --write .",
    "lint": "eslint .",
    "fix-style": "npm run format && npm run lint -- --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andriibezkorovainyi/dzen-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andriibezkorovainyi/dzen-api/issues"
  },
  "homepage": "https://github.com/andriibezkorovainyi/dzen-api#readme",
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.1.1",
    "express": "^4.18.2",
    "jsdom": "^22.1.0",
    "prisma": "^4.15.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsdom": "^21.1.1",
    "@types/mime": "^3.0.1",
    "@types/node": "^20.2.5",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*": "npm run lint"
  }
}
